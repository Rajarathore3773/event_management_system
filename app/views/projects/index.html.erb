<div class="col-lg-12">
  <%#= flash[:notice] %>
  <div class="card rounded-0 mt-5 mb-5">
    <div class="card-body">
      <h2 class="text-center">Listing Projects</h2>
    </div>
  </div>
  
  <%= link_to "Create New Project", new_project_path, class: "btn btn-primary btn-lg mb-4" %>
  
  <table class="table table-bordered text-center">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    
    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= project.title %></td>
          <td><%= project.description %></td>
          <td><%= project.start_date %></td>
          <td><%= project.end_date %></td>
          <td><%= project.status %></td>
          <td>
            <div class="dropdown">
              <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                Actions
            </button>
              
              <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                <li><%= link_to "Edit", edit_project_path(project), class: "dropdown-item" %></li>
                <li><%= link_to "View", project_path(project), class: "dropdown-item" %></li>
                <li><%= link_to "Delete", project_path(project),data:{"turbo-method": :delete,  confirm: "Are you sure you want to delete this project?" }, class: "dropdown-item" %></li>

              </ul>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
