<h2>Add User to Project</h2>
<%= form_with url: assign_role_project_path(@project), local: true do |form| %>
  <div class="form-group">
    <%= form.label :user_id, "Select User" %>
    <%= form.collection_select :user_id, @users, :id, :email, prompt: "Choose a user", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :role, "Assign Role" %>
    <%= form.select :role, [['Team Lead', 'team_lead'], ['Developer', 'developer']], prompt: "Select role", class: "form-control" %>
  </div>

  <%= form.submit "Add User to Project", class: "btn btn-primary" %>
<% end %>
